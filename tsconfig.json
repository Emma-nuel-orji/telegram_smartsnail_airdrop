{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@telegram-apps/sdk": [
        "./node_modules/@twa-dev/sdk/dist/index.js"
      ],
      "@loader": [
        "./loader.js"
      ],
      "@prisma": [
        "./lib/prisma.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "testConnection.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
