{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "target": "ESNext",         // Supports modern JS features
    "outDir": "./dist",         
    "strict": true,
    "noEmit": false,  // Allow emitting JS files
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"] // Path alias to simplify imports, if you use @ for your custom paths
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "testConnection.ts"],
  "exclude": ["node_modules/.prisma/client/deno"]
}
